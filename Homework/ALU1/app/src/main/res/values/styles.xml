<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="PrimaryColorBoldText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SocialStatsNumbersText" parent="PrimaryColorBoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="PrimaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="PrimaryTextCentered" parent="PrimaryText">
        <item name="android:textAlignment">center</item>
    </style>
    <style name="NameText" parent="PrimaryTextCentered">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>
    <style name="SecondaryTextCentered" parent="SecondaryText">
        <item name="android:textAlignment">center</item>
    </style>


</resources>
